<% include ../header.ejs %>
<style type="text/css">
.modal-content{width:800px;}
</style>
<div class="row">
    <div class="col-md-12">
        <div class="box box">
            <div class="box-header with-border">
                <h3 class="box-title">栏目列表</h3>
            </div>
            <div class="box-body dataTables_wrapper form-inline dt-bootstrap" >
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <button href="/admin/category/d_add" class="btn  btn-primary btn-form">添加栏目</button>
                            </div>
                        </div>
                        <hr>
                        <table  class="table table-bordered table-striped dataTable" role="grid" >
                            <thead>
                                <tr role="row">
                                    <th>ID</th>
                                    <th>标题</th>
                                    <th>栏目模型</th>
                                    <th>栏目目录</th>
                                    <th>导航显示</th>
                                    <th>操作</th>
                                </tr>
                            </thead>    
                            <tbody>
                                <%data.forEach(function(one, key) {%>
                                <tr role="row" class="color-palette">
                                    <td><%=one.id%></td>
                                    <td><%=one.name%></td>
                                    <td><%=__("model_"+one.model)%></td>
                                    <td><%=one.dir%></td>
                                    <td><%=__("status_"+one.isnavigation)%></td>
                                    <td>
                                        <a class="btn-form" href="/admin/category/d_update/<%=one.id%>">编辑</a>
                                        <a href="/admin/category/delete/<%=one.id%>" onclick="if(!confirm('删除后不可恢复,确定删除纪录吗?'))return false;">删除</a>
                                    </td>
                                </tr>
                                <%one.children.forEach(function(subone) {%>
                                <tr role="row">
                                    <td><%=subone.id%></td>
                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=subone.name%></td>
                                    <td><%=__("model_"+subone.model)%></td>
                                    <td><%=subone.dir%></td>
                                    <td><%=__("status_"+subone.isnavigation)%></td>
                                    <td>
                                        <a class="btn-form" href="/admin/category/d_update/<%=subone.id%>">编辑</a>
                                        <a href="/admin/category/delete/<%=subone.id%>" onclick="if(!confirm('删除后不可恢复,确定删除纪录吗?'))return false;">删除</a>
                                    </td>
                                </tr>
                                <%})%>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jquery 表单异步提交 -->
<script type="text/javascript" src="/lib/jquery.form.js"></script>
<script type="text/javascript">
$(document).on("submit",".ajax_form form",function () {
    $(".ajax_form form").ajaxSubmit({
        success: function (data) {
        if(typeof data === "object" && data.result){
            window.location.reload();
        }
        if(typeof data === "string"){
                $(".ajax_form").replaceWith(data);
            }
        }
    });
    return false;
});
</script>
