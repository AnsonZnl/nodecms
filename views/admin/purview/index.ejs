<% include ../header.ejs %>
<div class="row">
    <div class="col-md-12">
        <div class="box box">
            <div class="box-header with-border">
                <h3 class="box-title">权限列表</h3>
                
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body dataTables_wrapper form-inline dt-bootstrap" >
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th>ID</th>
                                    <th>标题</th>
                                    <th>方法</th>
                                    <th>功能</th>
                                    <th>状态</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                 <%data.forEach(function(one, key) {%> 
                                    <tr role="row" class="color-palette">
                                        <td><%=one.id%></td>
                                        <td><b><%=__("purview_"+one.class)%></b></td>
                                        <td><%=one.class%></td>
                                        <td><%=one.method%></td>
                                        <td><%=one.status%></td>
                                        <td>
                                            <a href="#">删除</a>
                                            <a href="#">编辑</a>
                                        </td>
                                    </tr>
                                     <%one.children.forEach(function(subone) {%> 
                                        <tr role="row">
                                            <td><%=subone.id%></td>
                                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=__("purview_"+subone.class)%></td>
                                            <td><%=subone.class%></td>
                                            <td><%=subone.method%></td>
                                            <td><%=subone.status%></td>
                                            <td>
                                                <a href="#">删除</a>
                                                <a href="#">编辑</a>
                                            </td>
                                        </tr>
                                     <%})%> 
                                 <%})%> 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // 页面变量，左栏状态 
    var _config = {
        "parent_purview":"<%=headers.parent_purview%>",
        "purview":"<%=headers.purview%>"
    };
</script>
